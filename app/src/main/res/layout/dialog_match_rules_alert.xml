<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        app:cardCornerRadius="7.0dip"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:id="@+id/mainRL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/topHeader"
                android:layout_width="fill_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/blueRandom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/lato_black"
                    android:text="Instructions"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#ffffffff"
                    android:textSize="25.0sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topHeader"
                android:layout_centerInParent="true"
                android:layout_marginTop="15.0dip"
                android:fontFamily="@font/lato_black"
                android:text="No New PUBG Accounts Allowed"
                android:textSize="17.0sp" />

            <TextView
                android:id="@+id/rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="15.0dip"
                android:fontFamily="@font/lato"
                android:text="Default match notice"
                android:textSize="15.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rules"
                android:layout_margin="15.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:padding="10.0dip">

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background1"
                        android:backgroundTint="#ff757575"
                        android:fontFamily="@font/lato"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:textColor="#ffffffff"
                        android:textSize="15.0sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:padding="10.0dip">

                    <Button
                        android:id="@+id/reset"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background1"
                        android:backgroundTint="@color/blueRandom"
                        android:fontFamily="@font/lato"
                        android:text="I AGREE"
                        android:textAllCaps="true"
                        android:textColor="#ffffffff"
                        android:textSize="15.0sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>