<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.0dip"
        android:layout_marginTop="50.0dip"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/reset_password"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="30.0sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.0dip"
        android:fontFamily="@font/poppins"
        android:text="@string/create_your_new_password"
        android:textColor="@android:color/white"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="80.0dip"
        android:background="@drawable/top_right_rounded"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyt_mobile_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginEnd="20.0dip"
                app:cardCornerRadius="2.0dip"
                app:cardElevation="6.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.0dip"
                        android:fontFamily="@font/poppins"
                        android:text="@string/new_password"
                        android:textSize="12.0sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_toStartOf="@+id/txt_pshow"
                            android:background="@null"
                            android:hint="@string/new_password"
                            android:inputType="textPassword"
                            android:textColor="@android:color/black"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/txt_pshow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="@string/show"
                            android:textColor="@color/colorPrimary" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginEnd="20.0dip"
                android:layout_marginBottom="20.0dip"
                app:cardCornerRadius="2.0dip"
                app:cardElevation="6.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.0dip"
                        android:fontFamily="@font/poppins"
                        android:text="@string/confirm_password"
                        android:textSize="12.0sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_conf_pwd"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginEnd="5.0dip"
                            android:layout_toStartOf="@+id/txt_cshow"
                            android:background="@null"
                            android:hint="@string/confirm_password"
                            android:inputType="textPassword"
                            android:textColor="@android:color/black"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/txt_cshow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="@string/show"
                            android:textColor="@color/colorPrimary" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lyt_save_pwd"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_marginStart="20.0dip"
            android:layout_marginTop="40.0dip"
            android:layout_marginEnd="20.0dip"
            android:background="@drawable/rounded_corners">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20.0dip"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/save_new_password"
                android:textColor="@android:color/white"
                android:textSize="18.0sp" />

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5.0dip"
                android:adjustViewBounds="true"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_enter_sign_in" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_mobile_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20.0dip"
            android:layout_marginTop="20.0dip"
            android:gravity="center"
            android:text="@string/login_using_mobile_number"
            android:textColor="@color/colorPrimary"
            android:textSize="16.0sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:indeterminate="true"
            android:padding="@dimen/spacing_large"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>